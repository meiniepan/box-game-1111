/* pages/game/game.wxss */
.top{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 100rpx;
  box-sizing: border-box;
}
.title{
  font-size: 16pt;
}
.top_button {
  display: flex;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  border: 1rpx solid red;
}
canvas{
  display: flex;
  flex-shrink: 0;
  width: 320px;
  height: 320px;

}
.btnBox{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}
.btnBox view{
  display: flex;
  flex-direction: row;
}

.btnBox button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx !important;
  height: 90rpx !important;
}
.blanc{
  width: 90rpx ;
  height: 90rpx;
}
.back{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 50rpx;
  width: 90rpx !important;
  height: 90rpx !important;
}

button{
  margin: 10rpx;
}