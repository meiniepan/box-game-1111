/* pages/game/game.wxss */
.top{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.title{
  color: greenyellow;
}

.play-area{
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: space-evenly;
  width: 240rpx;
  background: white;
  left: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
}
.play_button {
  display: flex;
  border-radius: 10rpx;
  width: 60rpx;
  height: 60rpx;
  align-items: center;
  justify-content: center;
}
@keyframes myAnimation {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}
.image{
  width: 80rpx;
  height: 80rpx;
}
.top_button {
  display: flex;
  border-radius: 10rpx;
  background: white;
  padding: 5rpx 10rpx;
}

canvas{
  display: flex;
  flex-shrink: 0;
  width: 320px;
  height: 320px;

}
.btnBox{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}
.btnBox view{
  display: flex;
  flex-direction: row;
}

.btnBox button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx !important;
  height: 90rpx !important;
}
.blanc{
  width: 90rpx ;
  height: 90rpx;
}
.back{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 50rpx;
  width: 90rpx !important;
  height: 90rpx !important;
}

button{
  margin: 10rpx;
}
