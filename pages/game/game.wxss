canvas{
  border: 1rpx solid;
  width: 320px;
  height: 320px;
}
.btnBox{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}
.btnBox view{
  display: flex;
  flex-direction: row;
}

.btnBox button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx !important;
  height: 90rpx !important;
}
.back{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 50rpx;
  width: 90rpx !important;
  height: 90rpx !important;
}

button{
  margin: 10rpx;
}